{
      "appenders": [
         { "type" : "console" },
          {
              "type": "dateFile",
              "filename": "logs/access.log",
              "pattern": "-yyyy-MM-dd",
              "category" : "normal",
              "level" : "LOG"
         },
         {
            "type": "file",
            "filename": "logs/error.log",
            "maxLogSize": 2097152,
            "backup": 10,
            "category": "error"
         },
         {
             "type": "dateFile",
             "filename": "logs/record.log",
             "pattern": "-yyyy-MM-dd",
             "category": "record"
         }
     ],
     "replaceConsole" : true,
     "levels": {
         "error":  "error",
         "record" : "trace"
     }
 }